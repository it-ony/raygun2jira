{
    "manifest_version": 2,
    "name": "raygun2jira",
    "description": "Extract raygun errors into Jira",
    "version": "1.0",
    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "permissions": [
        "https://*/",
        "storage"
    ],

    "content_scripts": [
        {
            "matches": [
                "https://app.raygun.com/crashreporting/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "icons": {
        "16": "icon/16.png",
        "48": "icon/48.png",
        "128": "icon/128.png"
    }
}